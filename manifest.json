{
  "manifest_version": 3,
  "name": "No More Vibecoding!",
  "version": "1.1.0",
  "description": "Blocks copy/paste on popular LLM chat sites so that you stop vibecoding.",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://grok.com/*",
        "https://grok.x.ai/*",
        "https://x.com/*"
      ],
      "js": ["block.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
